{
  "name": "signalk-lwm2m",
  "version": "0.0.1-alpha.1",
  "description": "Map Objects to Signalk Paths",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "npm run build:ts && npm run copy:files",
    "build:ts": "tsc",
    "copy:files": "mkdir -p dist/lib && cp lib/*.js dist/lib/ || true; mkdir -p dist/config && cp config/*.xml dist/config/ || true; mkdir -p dist/public && cp public/*.* dist/public/ || true; mkdir -p dist/build && cp build/* dist/build/ || true && sed -i 's|\"main\": \"dist/src/index.js\"|\"main\": \"src/index.js\"|g' dist/package.json && sed -i 's|\"types\": \"dist/src/index.d.ts\"|\"types\": \"src/index.d.ts\"|g' dist/package.json",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "postinstall": "echo 'Building TypeScript...' && npm run build",
    "dev": "npm run build && npm run watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write src/**/*.ts *.json --ignore-unknown",
    "format:check": "prettier --check src/**/*.ts *.json --ignore-unknown",
    "ci": "npm run format:check && npm run lint"
  },
  "icon": "public/lwm2m.png",
  "keywords": [
    "signalk-node-server-plugin",
    "signalk-category-utility",
    "signalk-webapp",
    "lwm2m",
    "iot",
    "typescript"
  ],
  "author": "Christian Kaiser",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mukulele/signalk-lwm2m.git"
  },
  "dependencies": {
    "@signalk/server-api": "^2.7.1",
    "@types/node": "^20.5.0",
    "source-map-support": "^0.5.21",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-love": "^62.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3"
  },
  "signalk": {
    "appSupport": "webapp",
    "compatibility": ">=2.13.0",
    "displayName": "LwM2M Objects",
    "appIcon": "lwm2m.png"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "lib/**/*",
    "build/**/*",
    "public/**/*",
    "config/**/*",
    "tsconfig.json",
    "README.md"
  ]
}
